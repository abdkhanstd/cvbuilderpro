# Database
DATABASE_URL="postgresql://user:password@localhost:5432/cvbuilder"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@cvbuilder.com"

# Google reCAPTCHA (optional - get keys from https://www.google.com/recaptcha/admin)
# Site key (public) - used in frontend
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
# Secret key (private) - used for server-side verification
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Google Scholar API (optional)
GOOGLE_SCHOLAR_API_KEY="your-google-scholar-api-key"

# AWS S3 (optional for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="cv-builder-uploads"

# App Configuration
APP_URL="http://localhost:3000"
NODE_ENV="development"
